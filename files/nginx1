server {
        listen 80 default_server;
        listen [::]:80 default_server;

        root /var/www/html;

        index index.html index.htm index.nginx-debian.html;

        server_name _;

        location /tier1 {
                alias /etc/tier1;
        }

        location /tier2 {
                alias /etc/tier2;
        }

        location / {
                try_files $uri $uri/ =404;
        }
}